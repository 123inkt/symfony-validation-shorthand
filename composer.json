{
    "name": "digitalrevolution/symfony-request-validation",
    "description": "Automatic request validation for symfony",
    "license": "MIT",
    "type": "symfony-bundle",
    "minimum-stability": "stable",
    "config": {
        "platform": {
            "php": "7.1.3"
        }
    },
    "autoload": {
        "psr-4": {
            "PrinsFrank\\SymfonyRequestValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrinsFrank\\SymfonyRequestValidation\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "7.1.* || 7.2.* || 7.3.*",
        "symfony/validator": "^4.4",
        "symfony/http-foundation": "^4.4",
        "symfony/http-kernel": "^4.4"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "7.5.*"
    },
    "scripts": {
        "phpcs": "phpcs ./src ./tests",
        "test": "phpunit --testsuite unit"
    }
}
